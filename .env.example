# Base Network RPC
BASE_RPC_URL=https://mainnet.base.org

# Basescan API (free key from basescan.org/apis)
BASESCAN_API_KEY=

# Groq API (free key from console.groq.com - recommended for cloud deployment)
# If set, Groq will be used instead of Ollama
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-70b-versatile

# Ollama (local LLM - used if GROQ_API_KEY is not set)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# Server
PORT=3001

# Monitor settings
POLL_INTERVAL_MS=15000
MAX_CONCURRENT_ANALYSES=3
CONFIDENCE_THRESHOLD=0.7
START_BLOCK=

# Data storage
DATA_DIR=./data
